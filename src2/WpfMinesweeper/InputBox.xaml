<Window x:Class="WpfMinesweeper.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Minesweeper" Height="130" Width="300" ResizeMode="NoResize">
    <StackPanel Height="100" VerticalAlignment="Top">
        <Label Content="You oppened all mines! Please enter you name:" HorizontalContentAlignment="Center" />
        <TextBox Name="NameTextBox" Height="23" TextWrapping="Wrap" Text="" HorizontalContentAlignment="Center"
                 Width="150" />
        <StackPanel Orientation="Horizontal">
            <Button Name="OkButton" Content="OK" Width="100" Height="25" Margin="35,10,0,0" HorizontalAlignment="Left"
                    Click="OkButton_Click" />
            <Button Name="CancelButton" Content="Cancel" Width="100" Height="25" HorizontalAlignment="Right"
                    Margin="25,10,25,0" Click="CancelButton_Click" />
        </StackPanel>
    </StackPanel>
</Window>