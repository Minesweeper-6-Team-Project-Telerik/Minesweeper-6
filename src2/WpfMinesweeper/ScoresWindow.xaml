<Window x:Class="WpfMinesweeper.ScoresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ScoresWindow" Height="379" Width="409">
    <Grid Margin="0,0,2,0">
        <ListView Margin="10,10,84,10" Name="scoreList">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Score" Width="50" DisplayMemberBinding="{Binding Score}" />
                    <GridViewColumn Header="Time" Width="50" DisplayMemberBinding="{Binding Time}" />
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>